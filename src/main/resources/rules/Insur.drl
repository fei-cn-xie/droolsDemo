end

// rule values at C17, header at C8
rule "insuranceRule_17"
	salience 65531
	agenda-group "sign"
	when
		$insurance:InsuranceInfo(payType != "趸交" || payType != "年缴")
	then
		listResults.add("缴费方式不对");
end

// rule values at C18, header at C8
rule "insuranceRule_18"
	salience 65530
	agenda-group "sign"
