import com.learning.drools.owntax.entity.InsuranceInfo;
global java.util.List listResults;
// rule values at C13, header at C8
rule "insuranceRule_13"
	salience 65535
	agenda-group "sign"
	when
		$insurance:InsuranceInfo(insuranceCompany != "PICC")
	then
		listResults.add("保险公司不正确");
end

// rule values at C14, header at C8
rule "insuranceRule_14"
	salience 65534
	agenda-group "sign"
	when
		$insurance:InsuranceInfo(saleRegion != "北京" || saleRegion != "天津")
	then
		listResults.add("销售区域不正确");
end

// rule values at C15, header at C8
rule "insuranceRule_15"
	salience 65533
	agenda-group "sign"
	when
		$insurance:InsuranceInfo(insuredAge < 18)
	then
